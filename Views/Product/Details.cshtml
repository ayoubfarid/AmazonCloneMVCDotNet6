@model AmazonCloneMVC.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />

    <div class="row">
        <div class="col-xl-4 ">

            <a href="@Url.Content(Model.Image)">
                <img src="@Url.Content(Model.Image)" style="border:solid 2px grey;border-radius:20px" alt="Product Image" class="img-fluid" />
            </a>
        </div>
        <div class="col-xl-8  border-1 border-secondary p-8 bg-light " style="border-radius:20px;padding:16px;">
            <h3>
                @Html.DisplayFor(model => model.Name)

            </h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Quantity)
                </dd>


                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Category.CategoryID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>


            <div class="mb-10 p-2">
                <a class="btn btn-warning" style="" asp-action="Edit"  asp-route-id="@Model?.ProductID">Edit</a>
                <a class="btn btn-outline-warning" asp-action="Index">Back to List</a>
            </div>

            
        </div>


    </div>
</div>